---
// Fetch de datos médicos desde nuestra API
let usuarios = [];

try {
	const response = await fetch(`${Astro.url.origin}/api/datosMedicos.json?limit=10`);
	
	if (response.ok) {
		const data = await response.json();
		usuarios = data.items || [];
	} else {
		console.error('Error al obtener datos:', response.status);
	}
} catch (error) {
	console.error('Error en el fetch:', error);
}
---

<div class="medical-users-container">
	<h2 class="title">Datos Médicos - Usuarios</h2>
	
	{usuarios.length === 0 ? (
		<div class="no-data">
			<p>No se pudieron cargar los datos médicos. Por favor, verifica que el servidor esté corriendo.</p>
		</div>
	) : (
		<div class="users-grid">
			{usuarios.map((usuario: any) => (
				<div class="user-card">
					<div class="card-header">
						<h3 class="user-name">{usuario.nombre}</h3>
					</div>
					
					<div class="card-body">
						<div class="info-row">
							<span class="label">Comunidad Autónoma:</span>
							<span class="value">{usuario["comunidad autónoma"]}</span>
						</div>
						
						<div class="info-row">
							<span class="label">Fecha de Nacimiento:</span>
							<span class="value">{usuario.fecha_de_nacimiento}</span>
						</div>
						
						<div class="info-row">
							<span class="label">Categoría:</span>
							<span class="value category">{usuario.categoría}</span>
						</div>
					</div>
				</div>
			))}
		</div>
	)}
</div>

<style>
	.medical-users-container {
		width: 100%;
		padding: 2rem;
	}

	.title {
		font-size: 2rem;
		font-weight: 700;
		margin-bottom: 2rem;
		text-align: center;
		color: var(--color-text, #1f2937);
	}

	.no-data {
		text-align: center;
		padding: 3rem 2rem;
		color: #6b7280;
		font-size: 1.125rem;
	}

	.users-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: 1.5rem;
		width: 100%;
	}

	.user-card {
		background: white;
		border-radius: 12px;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
		overflow: hidden;
		transition: all 0.3s ease;
		border: 1px solid #e5e7eb;
	}

	.user-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
	}

	.card-header {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		padding: 1.25rem;
	}

	.user-name {
		color: white;
		font-size: 1.125rem;
		font-weight: 600;
		margin: 0;
		text-transform: capitalize;
	}

	.card-body {
		padding: 1.25rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.info-row {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.label {
		font-size: 0.75rem;
		font-weight: 600;
		color: #6b7280;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.value {
		font-size: 0.95rem;
		color: #1f2937;
		font-weight: 500;
	}

	.value.category {
		color: #7c3aed;
		font-weight: 600;
		line-height: 1.4;
	}

	/* Dark mode */
	:global(.dark) .user-card {
		background: #1f2937;
		border-color: #374151;
	}

	:global(.dark) .title {
		color: #f9fafb;
	}

	:global(.dark) .value {
		color: #e5e7eb;
	}

	:global(.dark) .label {
		color: #9ca3af;
	}

	:global(.dark) .value.category {
		color: #a78bfa;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.medical-users-container {
			padding: 1rem;
		}

		.users-grid {
			grid-template-columns: 1fr;
			gap: 1rem;
		}

		.title {
			font-size: 1.5rem;
			margin-bottom: 1.5rem;
		}
	}
</style>
