---
// src/components/PokemonFromEndpoint.astro
// Carga todos los Pokémon desde el endpoint API

// Cargar TODOS los Pokémon (sin límite o con límite alto)
const response = await fetch(`${Astro.url.origin}/api/pokemon.json?limit=10000`);
const { items: allPokemon } = await response.json();

// Ordenar por ID
// Puedes definir una interfaz para mayor seguridad de tipos si lo deseas
// interface Pokemon { id: number; [key: string]: any }
// const sortedPokemon = allPokemon.sort((a: Pokemon, b: Pokemon) => a.id - b.id);
const sortedPokemon = allPokemon.sort((a: any, b: any) => a.id - b.id);

const defaultCount = 149;
const initialPokemon = sortedPokemon.slice(0, defaultCount);
---

<div class="container mx-auto px-4 py-8">
  <h2 class="text-3xl font-bold text-center mb-8 text-gray-800 dark:text-gray-100">
    Cargador de Pokémon - Endpoint API
    <span class="block text-lg font-normal text-gray-600 dark:text-gray-400 mt-2">
      Datos en tiempo real desde Oracle ORDS
    </span>
  </h2>
  
  <!-- Controles -->
  <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-8">
    <div class="flex items-center gap-2">
      <label for="pokemon-count-endpoint" class="text-gray-700 dark:text-gray-300 font-medium">Cantidad:</label>
      <input 
        type="number" 
        id="pokemon-count-endpoint" 
        min="1" 
        max={allPokemon.length} 
        value={defaultCount}
        class="border border-gray-300 dark:border-gray-600 rounded-lg px-3 py-2 w-20 text-center focus:outline-none focus:ring-2 focus:ring-purple-500 dark:focus:ring-purple-400 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100"
      />
      <span class="text-sm text-gray-500 dark:text-gray-400">Max: {allPokemon.length}</span>
    </div>
    
    <button 
      id="load-pokemon-endpoint" 
      class="bg-gradient-to-r from-purple-500 to-pink-600 hover:from-purple-600 hover:to-pink-700 text-white font-bold py-2 px-6 rounded-lg transition-all duration-200 flex items-center gap-2 shadow-lg hover:shadow-xl"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
      </svg>
      Mostrar Pokémon
    </button>
    
    <button 
      id="random-pokemon-endpoint" 
      class="bg-gradient-to-r from-green-500 to-teal-600 hover:from-green-600 hover:to-teal-700 text-white font-bold py-2 px-4 rounded-lg transition-all duration-200 flex items-center gap-2"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
      </svg>
      Aleatorios
    </button>

    <button 
      id="clear-pokemon-endpoint" 
      class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg transition-colors duration-200"
    >
      Limpiar
    </button>
  </div>
  
  <!-- Stats -->
  <div class="flex justify-center mb-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md dark:shadow-gray-900/50 px-6 py-3 flex items-center gap-4">
      <div class="text-center">
        <div class="text-2xl font-bold text-purple-600 dark:text-purple-400" id="showing-count-endpoint">{initialPokemon.length}</div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Mostrando</div>
      </div>
      <div class="w-px h-8 bg-gray-300 dark:bg-gray-600"></div>
      <div class="text-center">
        <div class="text-2xl font-bold text-pink-600 dark:text-pink-400">{allPokemon.length}</div>
        <div class="text-sm text-gray-600 dark:text-gray-400">Total disponible</div>
      </div>
    </div>
  </div>

  <!-- Grid de Pokémon -->
  <div id="pokemon-grid-endpoint" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6">
    <!-- Las tarjetas se renderizan via JavaScript -->
  </div>

  <!-- Footer con información -->
  <div class="mt-12 text-center">
    <div class="inline-flex items-center gap-2 bg-gradient-to-r from-purple-50 to-pink-50 dark:from-purple-900/30 dark:to-pink-900/30 px-6 py-3 rounded-full">
      <svg class="w-5 h-5 text-purple-500 dark:text-purple-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
      </svg>
      <span class="text-sm text-gray-700 dark:text-gray-300">
        Datos desde Endpoint API • Oracle ORDS
      </span>
    </div>
  </div>
</div>

<!-- Data para JavaScript (embedded) -->
<script define:vars={{ allPokemonEndpoint: sortedPokemon }}>
  let currentPokemonList = [];

  function setupEventListenersEndpoint() {
    const loadButton = document.getElementById('load-pokemon-endpoint');
    const randomButton = document.getElementById('random-pokemon-endpoint');
    const clearButton = document.getElementById('clear-pokemon-endpoint');
    const countInput = document.getElementById('pokemon-count-endpoint');
    const showingCount = document.getElementById('showing-count-endpoint');

    loadButton?.addEventListener('click', () => {
      const count = parseInt(countInput.value) || 10;
      showPokemonEndpoint(count);
    });

    randomButton?.addEventListener('click', () => {
      const count = parseInt(countInput.value) || 10;
      showRandomPokemonEndpoint(count);
    });

    clearButton?.addEventListener('click', () => {
      clearPokemonEndpoint();
      showingCount.textContent = '0';
    });

    countInput?.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        const count = parseInt(countInput.value) || 10;
        showPokemonEndpoint(count);
      }
    });

    // Validar input
    countInput?.addEventListener('input', (e) => {
      const max = allPokemonEndpoint.length;
      const value = parseInt(e.target.value);
      if (value > max) {
        e.target.value = max;
      }
      if (value < 1) {
        e.target.value = 1;
      }
    });
  }

  function showPokemonEndpoint(count) {
    const pokemonToShow = allPokemonEndpoint.slice(0, count);
    renderPokemonGridEndpoint(pokemonToShow);
    document.getElementById('showing-count-endpoint').textContent = pokemonToShow.length;
  }

  function showRandomPokemonEndpoint(count) {
    const shuffled = [...allPokemonEndpoint].sort(() => Math.random() - 0.5);
    const pokemonToShow = shuffled.slice(0, count);
    renderPokemonGridEndpoint(pokemonToShow);
    document.getElementById('showing-count-endpoint').textContent = pokemonToShow.length;
  }

  function clearPokemonEndpoint() {
    const grid = document.getElementById('pokemon-grid-endpoint');
    if (grid) {
      grid.innerHTML = '';
    }
  }

  function renderPokemonGridEndpoint(pokemonList) {
    const grid = document.getElementById('pokemon-grid-endpoint');
    if (!grid) return;

    const pokemonHTML = pokemonList.map(pokemon => {
      // Los datos vienen directamente del endpoint, no necesitan .data
      return generatePokemonCardHTMLEndpoint(pokemon);
    }).join('');

    grid.innerHTML = pokemonHTML;
  }

  function generatePokemonCardHTMLEndpoint(pokemon) {
    return `
      <div class="group bg-white dark:bg-gray-800 rounded-xl shadow-lg dark:shadow-gray-900/50 hover:shadow-2xl dark:hover:shadow-purple-500/20 transition-all duration-300 ease-out overflow-hidden cursor-pointer transform hover:-translate-y-3 hover:scale-105">
        <!-- Imagen del Pokémon -->
        <div class="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-blue-900/30 dark:to-indigo-900/30 p-6 flex justify-center">
          <img 
            src="${pokemon.sprite || ''}"
            alt="${pokemon.identifier}"
            class="w-24 h-24 object-contain"
            loading="lazy"
            onerror="this.src='data:image/svg+xml;base64,'"
          />
        </div>
        
        <!-- Información del Pokémon --> 
        <div class="p-4">
          <div class="text-center mb-3">
            <span class="text-sm text-gray-500 dark:text-gray-400 font-medium">#${pokemon.id.toString().padStart(3, '0')}</span>
            <h3 class="text-xl font-bold text-gray-800 dark:text-gray-100 capitalize">${pokemon.identifier}</h3>
          </div>
          
          <!-- Tipos -->
          <div class="flex justify-center gap-2 mb-3">
            ${(pokemon.types || []).map(type => `
              <span class="px-3 py-1 rounded-full text-white text-sm font-medium ${getTypeColorEndpoint(type.toLowerCase())}">
                ${capitalizeEndpoint(type)}
              </span>
            `).join('')}
          </div>
          
          <!-- Estadísticas básicas -->
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">Altura:</span>
              <span class="font-medium text-gray-900 dark:text-gray-100">${(pokemon.height / 10).toFixed(1)} m</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">Peso:</span>
              <span class="font-medium text-gray-900 dark:text-gray-100">${(pokemon.weight / 10).toFixed(1)} kg</span>
            </div>
            ${pokemon.base_experience ? `
            <div class="flex justify-between">
              <span class="text-gray-600 dark:text-gray-400">Experiencia:</span>
              <span class="font-medium text-gray-900 dark:text-gray-100">${pokemon.base_experience}</span>
            </div>
            ` : ''}
          </div>
        </div>
      </div>
    `;
  }

  function capitalizeEndpoint(str) {
    return str.charAt(0).toUpperCase() + str.slice(1);
  }

  function getTypeColorEndpoint(type) {
    const colors = {
      normal: 'bg-gray-400',
      fire: 'bg-red-500',
      water: 'bg-blue-500',
      electric: 'bg-yellow-400',
      grass: 'bg-green-500',
      ice: 'bg-blue-200',
      fighting: 'bg-red-700',
      poison: 'bg-purple-500',
      ground: 'bg-yellow-600',
      flying: 'bg-indigo-400',
      psychic: 'bg-pink-500',
      bug: 'bg-green-400',
      rock: 'bg-yellow-800',
      ghost: 'bg-purple-700',
      dragon: 'bg-indigo-700',
      dark: 'bg-gray-800',
      steel: 'bg-gray-500',
      fairy: 'bg-pink-300'
    };
    return colors[type] || 'bg-gray-400';
  }

  // Inicializar cuando el DOM esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      setupEventListenersEndpoint();
      showPokemonEndpoint(149);
    });
  } else {
    setupEventListenersEndpoint();
    showPokemonEndpoint(149);
  }
</script>

<style>
  /* Estilos adicionales */
  .container h2 span {
    font-size: 1rem;
  }
  
  /* Animación para los botones */
  button:active {
    transform: scale(0.98);
  }

  /* Mejoras visuales para el grid */
  #pokemon-grid-endpoint {
    min-height: 200px;
  }

  #pokemon-grid-endpoint:empty::after {
    content: "No hay Pokémon para mostrar. ¡Usa los controles para cargar algunos!";
    display: block;
    text-align: center;
    font-style: italic;
    padding: 4rem 2rem;
    grid-column: 1 / -1;
  }

  /* Modo claro */
  :global(:not(.dark)) #pokemon-grid-endpoint:empty::after {
    color: #6B7280;
  }

  /* Modo oscuro */
  :global(.dark) #pokemon-grid-endpoint:empty::after {
    color: #9CA3AF;
  }
</style>
